            <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#showSettingsButton" prefHeight="25.0" prefWidth="200.0" styleClass="button" text="Settings" />
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExitButtonClick" prefHeight="25.0" prefWidth="200.0" styleClass="button" text="Exit" />
        </VBox>
    </children>
</AnchorPane>
